# ===========================================
# Environment Variables - Mood Detection App
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ----- Required for Production -----

# Flask secret key for session signing (generate with: python -c "import secrets; print(secrets.token_hex(32))")
FLASK_SECRET_KEY=your-secret-key-here

# JWT secret key for token signing (generate with: python -c "import secrets; print(secrets.token_hex(32))")
JWT_SECRET_KEY=your-jwt-secret-here

# ----- Database (Auto-configured by Render) -----
# Leave empty for local SQLite, or set PostgreSQL URL for production
# Format: postgresql://user:password@host:port/database
DATABASE_URL=

# ----- Spotify API (Required for music features) -----
# Get credentials at: https://developer.spotify.com/dashboard

SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# ----- Optional Configuration -----

# Set to "production" for production deployments
FLASK_ENV=development

# Enable Flask debug mode (set to "true" only for development)
FLASK_DEBUG=false

# Port to run the application on
PORT=5000
